<?xml version="1.0" encoding="UTF-8"?>
<!-- This control is designed to define the different slots in the inventory of the Illarion Client. -->
<nifty-controls>
  <controlDefinition name="inventoryslot" controller="org.illarion.nifty.controls.inventoryslot.InventorySlotControl">
    <panel childLayout="center">
      <control id="#droppable" name="droppable" height="100%" width="100%">
        <effect>
          <onHover name="border" border="1px,1px,1px,1px" color="#f00f,#f00f,#0f0f,#00ff" timeType="infinite" />
        </effect>
        <control id="#draggable" name="draggable" enabled="false" childLayout="center">
          <panel width="100%" height="100%" childLayout="center" visibleToMouse="true">
            <image id="#draggableImage" width="100%" height="100%" visible="false" />
          </panel>
        </control>
      </control>

      <panel width="100%" height="100%" childLayout="center" visibleToMouse="false">
        <image id="#backgroundImage" visible="false" />
        <control id="#backgroundImageLabel" name="label" align="right" valign="bottom" visible="false" />
      </panel>
    </panel>
  </controlDefinition>
</nifty-controls>
