<nifty-controls>
    <controlDefinition name="dialog-message" controller="org.illarion.nifty.controls.dialog.message.DialogMessageControl" visibleToMouse="false">
        <control name="window" title="Nachricht" id="#window" visibleToMouse="true">
            <panel childLayout="vertical" visibleToMouse="true" width="100%">
                <panel childLayout="center" width="100%">
                    <control name="label" id="#text" wrap="true" text="-" width="100%" />
                </panel>
                <panel height="5px" />
                <panel id="#buttons" childLayout="center" visibleToMouse="true" width="100%">
                    <control name="button" id="#button" label="OK" />
                </panel>
            </panel>
        </control>
    </controlDefinition>
</nifty-controls>
