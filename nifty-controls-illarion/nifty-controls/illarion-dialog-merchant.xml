<nifty-controls>
    <resourceBundle id="illarion-dialog-merchant-bundle" filename="illarion-dialog-merchant"/>

    <controlDefinition name="dialog-merchant-list-entry" style="illarion-dialog-merchant-line">
        <panel childLayout="horizontal">
            <panel childLayout="center" id="#imageContainer">
                <image id="#imageDisplay"/>
            </panel>
            <panel childLayout="vertical" id="#itemInfos">
                <control name="label" id="#title"/>
                <panel childLayout="horizontal">
                    <image id="#moneyGoldImage"/>
                    <control name="label" id="#moneyGoldCount"/>
                    <image id="#moneySilverImage"/>
                    <control name="label" id="#moneySilverCount"/>
                    <image id="#moneyCopperImage"/>
                    <control name="label" id="#moneyCopperCount"/>
                </panel>
            </panel>
        </panel>
    </controlDefinition>

    <controlDefinition name="dialog-merchant" style="illarion-dialog-merchant" visibleToMouse="true"
                       controller="org.illarion.nifty.controls.dialog.merchant.DialogMerchantControl">
        <control name="window" title="${illarion-dialog-merchant-bundle.title}" visibleToMouse="true">
            <panel childLayout="horizontal">
                <control name="tabGroup">
                    <control name="tab" caption="${illarion-dialog-merchant-bundle.sellTab}" id="#sellingTab">
                        <panel childLayout="vertical" width="100%">
                            <panel width="100%" childLayout="center">
                                <control name="listBox" id="#sellList" vertical="on" horizontal="off"
                                         displayItems="8" selection="Single" width="100%"
                                         viewConverterClass="org.illarion.nifty.controls.dialog.merchant.MerchantItemListViewConverter">
                                    <control name="dialog-merchant-list-entry"/>
                                </control>
                            </panel>
                            <panel childLayout="vertical" width="100%">
                                <control name="label" label="${illarion-dialog-merchant-bundle.selCount}"
                                         id="#buyCountLabel" width="100%"/>
                                <panel childLayout="horizontal">
                                    <control name="horizontalSlider" min="1" max="255" initial="1" stepSize="1"
                                             buttonStepSize="25" id="#buyCountSlider"/>
                                    <control name="label" id="#buyCountAmountDisplay"/>
                                </panel>
                            </panel>
                            <panel id="#buttons" childLayout="center" visibleToMouse="true" width="100%">
                                <panel childLayout="horizontal" align="center">
                                    <control name="button" id="#buttonLeft"
                                             label="${illarion-dialog-merchant-bundle.buy}"/>
                                    <control name="button" id="#buttonRight"
                                             label="${illarion-dialog-merchant-bundle.close}"/>
                                </panel>
                            </panel>
                        </panel>
                    </control>
                    <control name="tab" caption="${illarion-dialog-merchant-bundle.buyTab}" id="#buyingTab">
                        <panel childLayout="vertical" width="100%">
                            <control name="label" width="100%" wrap="true" id="#buyDescription"
                                     label="${illarion-dialog-merchant-bundle.buyDescription}"/>
                            <control name="listBox" id="#buyList" vertical="optional" horizontal="off" displayItems="8"
                                     selection="Single"
                                     viewConverterClass="org.illarion.nifty.controls.dialog.merchant.MerchantItemListViewConverter">
                                <control name="dialog-merchant-list-entry"/>
                            </control>
                        </panel>
                    </control>
                </control>
            </panel>
        </control>
    </controlDefinition>
</nifty-controls>
