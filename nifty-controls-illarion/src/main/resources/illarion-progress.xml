<!-- This control is designed to define the different slots in the inventory of the Illarion Client. -->
<nifty-controls>
    <controlDefinition name="progress"
                       controller="org.illarion.nifty.controls.progress.ProgressControl"
                       style="illarion-progress" visibleToMouse="false">
        <panel id="#background" style="#background" childLayout="horizontal">
            <panel id="#fillArea" style="#fillArea" childLayout="horizontal">
                <panel id="#fillWrapper" style="#fillWrapper" childLayout="horizontal" childClip="true">
                    <image id="#fill" style="#fill"/>
                </panel>
            </panel>
        </panel>
    </controlDefinition>
</nifty-controls>
