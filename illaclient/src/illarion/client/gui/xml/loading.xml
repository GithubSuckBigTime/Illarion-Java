<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd
                           http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-illarion-style.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

    <!-- progressbar control -->
    <controlDefinition name="progressbar" controller="illarion.client.gui.controller.ProgressbarControl">
        <image filename="data/gui/progressbar/progressbar-outer.png" imageMode="resize:13,2,13,13,13,2,13,2,13,2,13,13"
               childLayout="absolute">
            <image id="progress" x="0" y="0" filename="data/gui/progressbar/progressbar-inner.png" width="28px"
                   height="100%" imageMode="resize:13,2,13,13,13,2,13,2,13,2,13,13"/>
        </image>
    </controlDefinition>

    <!-- loading screen -->
    <screen id="loading" controller="illarion.client.gui.controller.LoadScreenController">
        <layer id="layerprogress" backgroundColor="#0000" childLayout="center">
            <panel height="300px" width="400px" align="center" valign="center" backgroundColor="#0000"
                   childLayout="vertical">
                <image filename="data/gui/illarion_title.png" imageMode="normal" align="center"/>
                <panel height="30px"/>
                <control name="progressbar" id="loading" align="center" valign="center" width="400px" height="28px"/>
            </panel>
        </layer>
    </screen>
</nifty>