<nifty-styles>
    <style id="nifty-treebox-item" base="nifty-listbox-item">
        <attributes childLayout="horizontal" height="24px"/>
    </style>
    <style id="nifty-treebox-item#tree-item-icon-container">
        <attributes childLayout="center" height="24px" width="24px"/>
    </style>
    <style id="nifty-treebox-item#content">
        <attributes childLayout="horizontal" height="24px"/>
    </style>
    <style id="nifty-treebox-item#closed">
        <attributes filename="data/gui/treebox/closed.png" height="13px" width="8px"/>
    </style>
    <style id="nifty-treebox-item#opened">
        <attributes filename="data/gui/treebox/opened.png" height="8px" width="13px"/>
    </style>
    <style id="nifty-treebox-item#leaf">
        <attributes height="0px" width="0px" visible="false"/>
    </style>
</nifty-styles>
