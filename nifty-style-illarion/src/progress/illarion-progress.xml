    </style>

    <style id="illarion-mana-bar#fill">
        <attributes filename="data/gui/progressbar/MP.png" width="11px"
                    height="100%" imageMode="resize:5,1,5,0,5,1,5,10,5,1,5,0"/>
    </style>

    <!-- Foodpoints Bar -->
    <style id="illarion-food-bar">
        <attributes height="12px" minImageWidth="11"/>
    </style>

    <style id="illarion-food-bar#background">
        <attributes backgroundImage="data/gui/progressbar/FP_e.png"
                    imageMode="resize:8,1,8,0,8,1,8,12,8,1,8,0"/>
    </style>

    <style id="illarion-food-bar#fillArea">
        <attributes height="10px" marginTop="1px" marginBottom="1px" marginLeft="3px" marginRight="3px"/>
    </style>

    <style id="illarion-food-bar#fillWrapper">
