<nifty-styles>
    <!-- Default Progress Bar -->
    <style id="illarion-progress">
        <attributes height="28px" minImageWidth="28"/>
    </style>

    <style id="illarion-progress#background">
        <attributes backgroundImage="data/gui/progressbar/progressbar-outer.png"
                    imageMode="resize:13,2,13,13,13,2,13,2,13,2,13,13"/>
    </style>

    <style id="illarion-progress#fillArea">
        <attributes width="100%" height="100%"/>
    </style>

    <style id="illarion-progress#fillWrapper">
        <attributes height="100%"/>
    </style>

    <style id="illarion-progress#fill">
        <attributes filename="data/gui/progressbar/progressbar-inner.png" width="28px"
                    height="100%" imageMode="resize:13,2,13,13,13,2,13,2,13,2,13,13"/>
    </style>

    <!-- Hitpoints Bar -->
    <style id="illarion-health-bar">
        <attributes height="12px" minImageWidth="11"/>
    </style>

    <style id="illarion-health-bar#background">
        <attributes backgroundImage="data/gui/progressbar/HP_e.png"
                    imageMode="resize:8,1,8,0,8,1,8,12,8,1,8,0"/>
    </style>

    <style id="illarion-health-bar#fillArea">
        <attributes height="10px" marginTop="1px" marginBottom="1px" marginLeft="3px" marginRight="3px"/>
    </style>

    <style id="illarion-health-bar#fillWrapper">
        <attributes height="100%"/>
    </style>

    <style id="illarion-health-bar#fill">
        <attributes filename="data/gui/progressbar/HP.png" width="11px"
                    height="100%" imageMode="resize:5,1,5,0,5,1,5,10,5,1,5,0"/>
    </style>

    <!-- Manapoints Bar -->
    <style id="illarion-mana-bar">
        <attributes height="12px" minImageWidth="11"/>
    </style>

    <style id="illarion-mana-bar#background">
