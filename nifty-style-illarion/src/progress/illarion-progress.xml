    <style id="illarion-food-bar#fill">
        <attributes filename="data/gui/progressbar/FP.png" width="11px"
                    height="100%" imageMode="resize:5,1,5,0,5,1,5,10,5,1,5,0"/>
    </style>
</nifty-styles>