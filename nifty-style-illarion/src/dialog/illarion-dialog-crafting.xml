<nifty-styles>
    <useStyles filename="window/nifty-window.xml"/>

    <style id="illarion-dialog-crafting">
        <attributes childLayout="vertical" width="492px"/>
    </style>
    <style id="illarion-dialog-crafting-content">
        <attributes childLayout="vertical" width="450px"/>
    </style>
    <style id="illarion-dialog-crafting-content#craftItemList" base="nifty-listbox">
        <attributes childLayout="vertical" width="450px"/>
    </style>
    <style id="illarion-dialog-crafting-content#scrollpanel" base="nifty-listbox#scrollpanel"/>
    <style id="illarion-dialog-crafting-content#bottom-right" base="nifty-listbox#bottom-right"/>

    <style id="illarion-dialog-crafting-content#selectedItemInfos">
        <attributes childLayout="horizontal" width="450px" marginTop="5px"/>
    </style>

    <style id="illarion-dialog-crafting-content#selectedItemImageWrapper" base="nifty-panel-item">
        <attributes width="64px" height="64px" childLayout="center"/>
    </style>

    <style id="illarion-dialog-crafting-content#selectedItemImage">
        <attributes valign="center" align="center"/>
    </style>

    <style id="illarion-dialog-crafting-content#selectedItemAmount" base="nifty-label">
        <attributes align="right" valign="bottom" color="#ff0f" backgroundColor="#bb15" visibleToMouse="false"
                    marginRight="4px" marginBottom="4px"/>
    </style>

    <style id="illarion-dialog-crafting-content#selectedItemName" base="nifty-label">
        <attributes width="*" marginLeft="10px" height="64px" textHAlign="left" textVAlign="center"/>
    </style>

    <style id="illarion-dialog-crafting-content#productionTime" base="nifty-label">
        <attributes width="450px" textHAlign="left"/>
    </style>

    <style id="illarion-dialog-crafting-content#ingredients">
        <attributes width="450px" childLayout="vertical" height="37px"/>
    </style>

    <style id="illarion-dialog-crafting-content#buttonLine">
        <attributes childLayout="center" width="450px" marginTop="10px"/>
    </style>

    <style id="illarion-dialog-crafting-content#buttonWrapper">
        <attributes childLayout="horizontal" align="right"/>
    </style>
</nifty-styles>