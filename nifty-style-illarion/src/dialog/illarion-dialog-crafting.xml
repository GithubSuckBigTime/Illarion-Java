<nifty-styles>
    <useStyles filename="label/nifty-label.xml"/>
    <useStyles filename="textfield/nifty-textfield.xml"/>
    <useStyles filename="listbox/nifty-listbox-style.xml"/>

    <style id="illarion-dialog-crafting">
        <attributes childLayout="vertical"/>
    </style>
    <style id="illarion-dialog-crafting#craftItemList" base="nifty-listbox">
        <attributes childLayout="vertical" width="450px"/>
    </style>
    <style id="illarion-dialog-crafting#craftItemList#scrollpanel" base="nifty-listbox#scrollpanel"/>
    <style id="illarion-dialog-crafting#craftItemList#bottom-right" base="nifty-listbox#bottom-right"/>

    <style id="illarion-dialog-crafting#selectedItemImage">
        <attributes width="64px" height="64px"/>
    </style>

    <style id="illarion-dialog-crafting#selectedItemName" base="nifty-label">
        <attributes width="*" height="64px" textHAlign="left" textVAlign="center"/>
    </style>

    <style id="illarion-dialog-crafting#productionTime" base="nifty-label">
        <attributes width="*"/>
    </style>

    <style id="illarion-dialog-crafting#ingredients">
        <attributes/>
    </style>
</nifty-styles>