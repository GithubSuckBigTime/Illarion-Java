<nifty-styles>
    <style id="illarion-dialog-merchant">
        <attributes/>
    </style>

    <style id="illarion-dialog-merchant#buyCountSlider">
        <attributes width="*"/>
    </style>

    <style id="illarion-dialog-merchant#buyCountAmountDisplay">
        <attributes font="textFont" width="40px" textHAlign="right"/>
    </style>

    <style id="illarion-dialog-merchant#buyDescription">
        <attributes font="textFont" textHAlign="left" marginBottom="5px"/>
    </style>

    <style id="illarion-dialog-merchant#buttonLeft">
        <attributes width="90px" margin="3px"/>
    </style>

    <style id="illarion-dialog-merchant#buttonRight">
        <attributes width="90px" margin="3px"/>
    </style>

    <style id="illarion-dialog-merchant-line">
        <attributes height="30px" margin="1px"/>
    </style>

    <style id="illarion-dialog-merchant-line#imageContainer">
        <attributes width="24px" height="100%" marginRight="3px"/>
    </style>

    <style id="illarion-dialog-merchant-line#imageDisplay">
        <attributes imageMode="normal"/>
    </style>

    <style id="illarion-dialog-merchant-line#imageInfos">
        <attributes width="*"/>
    </style>

    <style id="illarion-dialog-merchant-line#title">
        <attributes font="textFont"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyGoldImage">
        <attributes filename="data/gui/gold.png" height="16px" width="16px"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyGoldCount">
        <attributes font="textFont" width="40px" textHAlign="left"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneySilverImage">
        <attributes filename="data/gui/silver.png" height="16px" width="16px"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneySilverCount">
        <attributes font="textFont" width="40px" textHAlign="left"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyCopperImage">
        <attributes filename="data/gui/copper.png" height="16px" width="16px"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyCopperCount">
        <attributes font="textFont" width="40px" textHAlign="left"/>
    </style>
</nifty-styles>