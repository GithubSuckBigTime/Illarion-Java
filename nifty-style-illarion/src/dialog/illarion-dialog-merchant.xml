<nifty-styles>
    <style id="illarion-dialog-merchant">
        <attributes/>
    </style>

    <style id="illarion-dialog-merchant-sell#sellCountLabel" base="nifty-label">
        <attributes font="textFont" width="100%" textHAlign="left"/>
    </style>

    <style id="illarion-dialog-merchant-sell#buyCountAmountDisplay" base="nifty-label">
        <attributes font="textFont" width="50px" textHAlign="right"/>
    </style>

    <style id="illarion-dialog-merchant-buy#buyDescription" base="nifty-label">
        <attributes font="textFont" textHAlign="left" marginBottom="5px" width="98%" height="20px" wrap="true"
                    align="left"/>
    </style>


    <style id="illarion-dialog-merchant-line">
        <attributes height="46px" width="100%" margin="1px" visibleToMouse="true"/>
        <effect>
            <onHover name="colorBar" color="#264d1cff" neverStopRendering="true" timeType="infinite"/>
            <onCustom customKey="focus" name="colorBar" post="false" color="#051901ff" neverStopRendering="true"
                      timeType="infinite"/>
            <onCustom customKey="select" name="colorBar" post="false" color="#051901ff" neverStopRendering="true"
                      timeType="infinite"/>
            <onCustom customKey="select" name="textColor" post="false" color="#eeef" neverStopRendering="true"
                      timeType="infinite"/>
            <onClick name="focus" targetElement="#parent#parent"/>
        </effect>
    </style>

    <style id="illarion-dialog-merchant-line#imageContainer">
        <attributes width="76px" height="100%" marginRight="3px" visibleToMouse="false"/>
    </style>

    <style id="illarion-dialog-merchant-line#imageDisplay">
        <attributes imageMode="normal" visibleToMouse="false"/>
    </style>

    <style id="illarion-dialog-merchant-line#itemInfos">
        <attributes width="*" visibleToMouse="false"/>
    </style>

    <style id="illarion-dialog-merchant-line#itemTitle" base="nifty-label">
        <attributes font="textFont" width="100%" textHAlign="left"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyGoldImage">
        <attributes filename="data/gui/gold.png" height="16px" width="16px" marginRight="2px"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyGoldCount" base="nifty-label">
        <attributes font="textFont" width="34px" height="16px" textHAlign="left" textVAlign="center"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneySilverImage">
        <attributes filename="data/gui/silver.png" height="16px" width="16px" marginRight="2px"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneySilverCount" base="nifty-label">
        <attributes font="textFont" width="34px" height="16px" textHAlign="left" textVAlign="center"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyCopperImage">
        <attributes filename="data/gui/copper.png" height="16px" width="16px" marginRight="2px"/>
    </style>

    <style id="illarion-dialog-merchant-line#moneyCopperCount" base="nifty-label">
        <attributes font="textFont" width="34px" height="16px" textHAlign="left" textVAlign="center"/>
    </style>
</nifty-styles>