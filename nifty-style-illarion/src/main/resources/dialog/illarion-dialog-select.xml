<nifty-styles>
    <style id="illarion-dialog-select">
        <attributes/>
    </style>

    <style id="illarion-dialog-select#buttons">
        <attributes width="100%" padding="5px"/>
    </style>

    <style id="illarion-dialog-select#message" base="nifty-label">
        <attributes padding="5px" width="100%"/>
    </style>

    <style id="illarion-dialog-select-line" base="nifty-listbox-item">
        <attributes height="46px" width="100%" padding="1px" visibleToMouse="true"/>
        <interact onMultiClick="listBoxItemMultiClicked()"/>
        <effect>
            <onHover name="colorBar" color="#264d1cff" neverStopRendering="true" timeType="infinite"/>
        </effect>
    </style>

    <style id="illarion-dialog-select-line#imageContainer">
        <attributes width="76px" height="100%" marginRight="3px" visibleToMouse="false"/>
    </style>

    <style id="illarion-dialog-select-line#imageDisplay">
        <attributes imageMode="normal" visibleToMouse="false"/>
    </style>

    <style id="illarion-dialog-select-line#itemInfos">
        <attributes width="*" visibleToMouse="false"/>
    </style>

    <style id="illarion-dialog-select-line#itemTitle" base="nifty-label">
        <attributes font="textFont" width="100%" textHAlign="left" textVAlign="center" height="*"/>
    </style>
</nifty-styles>