<nifty-styles>
    <!-- Default Progress Bar -->
    <style id="illarion-progress">
        <attributes height="18px" minImageWidth="6"/>
    </style>

    <style id="illarion-progress#background">
        <attributes backgroundImage="gui/progressbar/progressbar-outer.png"
                    imageMode="resize:8,2,8,9,8,2,8,2,8,2,8,9" padding="2px,3px"/>
    </style>

    <style id="illarion-progress#fillArea">
        <attributes width="100%" height="100%"/>
    </style>

    <style id="illarion-progress#fillWrapper">
        <attributes height="100%"/>
    </style>

    <style id="illarion-progress#fill">
        <attributes filename="gui/progressbar/progressbar-inner.png" width="6px"
                    height="100%" imageMode="resize:2,2,2,2,2,2,2,12,2,2,2,2"/>
    </style>

