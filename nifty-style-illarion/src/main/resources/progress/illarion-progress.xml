    <style id="illarion-health-bar#fillWrapper">
        <attributes height="100%"/>
    </style>

    <style id="illarion-health-bar#fill">
        <attributes filename="gui/progressbar/HP.png" width="11px"
                    height="100%" imageMode="resize:5,1,5,4,5,1,5,2,5,1,5,4"/>
