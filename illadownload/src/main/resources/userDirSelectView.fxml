<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-preview-i18n-resource dataDirSelectView_de.properties?>
<?scenebuilder-stylesheet applicationFrame.css?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="illarion.download.gui.controller.UserDirSelectionController">
  <children>
    <VBox fx:id="content" fillWidth="true">
      <fx:define>
        <ToggleGroup fx:id="storageMethodSelect" />
      </fx:define>
      <children>
        <Label style="-fx-font-size: 20pt" text="%title" />
        <Label text="%descriptionGeneral" wrapText="true" />
        <Label text="%descriptionAbsoluteRelative" wrapText="true" />
        <VBox fillWidth="true">
          <children>
            <RadioButton fx:id="optionAbsolute" text="%optionAbsolute" toggleGroup="$storageMethodSelect" />
            <VBox fillWidth="true">
              <children>
                  <HBox prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="NEVER" spacing="10">
                  <children>
                    <TextField fx:id="selectedDirectory" HBox.hgrow="ALWAYS" />
                    <Button onAction="#browse" prefWidth="100.0" styleClass="button-gray" text="%browse"
                            HBox.hgrow="NEVER" />
                  </children>
                </HBox>
              </children>
              <padding>
                <Insets bottom="20.0" left="20.0" />
              </padding>
            </VBox>
            <RadioButton fx:id="optionRelative" text="%optionRelative" toggleGroup="$storageMethodSelect" />
          </children>
          <padding>
            <Insets top="20.0" />
          </padding>
        </VBox>
      </children>
    </VBox>
    <BorderPane fx:id="footer">
      <right>
        <Button alignment="CENTER_RIGHT" onAction="#nextStep" styleClass="button-green" text="%continue" />
      </right>
    </BorderPane>
  </children>
</AnchorPane>
